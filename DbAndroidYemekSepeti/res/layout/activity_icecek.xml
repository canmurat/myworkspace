<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yemeklerarkaplan"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ff347c12"
            android:paddingLeft="120dp"
            android:text="ICECEKLER" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.21"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinnericecek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50" >

            <TextView
                android:id="@+id/adettexticecek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adet : " />

            <EditText
                android:id="@+id/edittexticecek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:id="@+id/btniceceksiparis"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="left"
            android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal|left"
            android:text="Sepete Ekle"
            android:onClick="btnSiparis" />

        <Button
            android:id="@+id/btniceceksepet"
            android:layout_width="74dp"
            android:layout_height="72dp"
            android:layout_weight="0.83"
            android:gravity="center|fill|clip_vertical"
            android:onClick="yemekSepeti"
            android:paddingLeft="36dp"
            android:text="Yemek Sepetim" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0" >

            <Button
                android:id="@+id/btnCikisIcecekler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="btnCikis"
                android:text="Cıkıs" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>