<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Header -->

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff347c12" >

        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:height="30dip"
            android:text="id"
            android:width="30dip" />

        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.21"
            android:height="30dip"
            android:text="Adet"
            android:width="30dip" />

        <TextView
            android:id="@+id/item2"
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.65"
            android:height="30dip"
            android:text="AlÄ±nan"
            android:width="30dip" />

        <TextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.36"
            android:height="30dip"
            android:text="Fiyat(Tl)"
            android:width="30dip" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.11"
            android:height="30dip"
            android:text="Kaldir" />
    </LinearLayout>

    <!-- List Divider -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="?android:attr/listDivider" />

    <!-- ListView (grid_items) -->

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_weight="0.63"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_weight="0.52" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/siparisleriGoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toplam Hesap : " />

            <TextView
                android:id="@+id/textalinanlar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/siparisver"
            android:layout_width="101dp"
            android:layout_height="102dp"
            android:gravity="left|center_vertical"
            android:onClick="siparisVer"
            android:paddingLeft="20dp"
            android:text="Siparis Ver" />

        <Button
            android:id="@+id/button1"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:text="Dosya Oku"
            android:onClick="siparisleriGoster" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="207dp"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/imageButtonYemek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:onClick="geriDonYemekler"
                    android:src="@drawable/yemekler1" />

                <ImageButton
                    android:id="@+id/imageButtonIcecek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:onClick="geriDonIcecekler"
                    android:src="@drawable/icecekler1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="209dp"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/imageButtonSalata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:onClick="geriDonSalatalar"
                    android:src="@drawable/salata1" />

                <ImageButton
                    android:id="@+id/imageButtonTatli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0"
                    android:onClick="geriDonTatlilar"
                    android:src="@drawable/tatli1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>